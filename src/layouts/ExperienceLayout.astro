---
import { getConfigurationCollection } from "../lib/utils";
import type { ExperienceFrontmatter } from "../lib/types";
import Prose from "../components/Prose.astro";
import Layout from "./Layout.astro";
import Section from "../components/common/Section.astro";
import "../styles/global.css";
type Props = { frontmatter: ExperienceFrontmatter };

const { frontmatter } = Astro.props;
const { data: config } = await getConfigurationCollection();
---

<Layout>
  <Fragment slot="head">
    <title>{`${frontmatter.title} • ${config.personal.name}`}</title>
    <meta
      name="description"
      content={frontmatter.longDescription ?? frontmatter.description}
    />
    <meta
      property="og:title"
      content={`${frontmatter.title} • ${config.personal.name}`}
    />
    <meta property="og:description" content={frontmatter.description} />
    {
      frontmatter.tags && (
        <meta name="keywords" content={frontmatter.tags.join(", ")} />
      )
    }
    {
      frontmatter.cardImage && (
        <meta property="og:image" content={frontmatter.cardImage} />
      )
    }
    <meta
      property="og:url"
      content={`${config.site.baseUrl}/experience/${frontmatter.slug}`}
    />
    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:title"
      content={`${frontmatter.title} • ${config.personal.name}`}
    />
    <meta name="twitter:description" content={frontmatter.description} />
    {
      frontmatter.cardImage && (
        <meta name="twitter:image" content={frontmatter.cardImage} />
      )
    }
    <meta http-equiv="content-language" content="en" />
    <meta name="language" content="English" />
    <link
      rel="canonical"
      href={`${config.site.baseUrl}/experience/${frontmatter.slug}`}
    />
  </Fragment>
  <Section class="zag-responsive-text max-w-prose pt-8">
    <div class="project-content">
      <div class="mt-8 mb-16 flex flex-col gap-4">
        <p class="zag-muted font-mono text-sm">
          {frontmatter.startMonthYear} – {frontmatter.endMonthYear}
        </p>
        <h1
          class="font-display has-text-scramble text-3xl leading-tight sm:text-4xl"
        >
          {frontmatter.title}
        </h1>

        {
          /* UPDATED: Replaced the date "pill" with a simple <p> tag to match the snippet. */
        }

        <div class="flex flex-wrap gap-2 text-sm">
          {
            frontmatter.tags
              ? frontmatter.tags.map((tag) => (
                  <span class="-zag-text -zag-bg zag-transition px-2 py-1 font-semibold">
                    {tag}
                  </span>
                ))
              : null
          }
        </div>
      </div>
      <Prose class="font-serif">
        <slot />
      </Prose>
    </div>
  </Section>
</Layout>
